<%- include('partials/_header') -%>
<body>
	<div class="tm-page-wrap mx-auto">
		<div class="position-relative">
			
            <%- include('partials/_menu') -%>

			<div class="tm-welcome-container tm-fixed-header tm-fixed-header-2">
				<div class="text-center">
					<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 text-white mx-auto">Another Image BG<br>it can be fixed.<br>Content will simply slide over.</p>                	
				</div>                
            </div>

            <div id="tm-fixed-header-bg"></div> <!-- Header image -->
		</div>

		<!-- Page content -->
		<main>
			<div class="container-fluid px-0">
				<div class="mx-auto tm-content-container">					
					<div class="row mt-3   pb-3">
						<div class="col-12 mb-5">
                            <img src="<%= photos.image %>" alt="Image" class="img-fluid tm-catalog-item-img"> 

                            </div>

                              <div class="col-lg-8 col-md-6 col-sm-12  ">
                                <div class="  p-4">
                                   
                                    <h3 class="tm-text-primary mb-3"><%= photos.title %> </h3>
                                    <p> <%= photos.description %></p>
                                    <p> <%= fromNow(photos.dateCreated) %></p>
                                </div>	
                            </div>
                              <div class="col-lg-4 col-md-4 col-sm-12 text-center  ">
                                <div class="tm-bg-gray p-4">
                                    
                                    <a href="/photos/edit/<%= photos.id %>" class="btn btn-primary mb-4"> Update Details</a>
                                    <a href="/photos/<%= photos.id %>?_method=DELETE" class="btn btn-danger"> Delete Details</a>
                                 
                                </div>	
                            </div>
								 
							 			
						</div>						
					</div>					
				</div>

			 
				 
 
			</div>
		</main>

		<%- include('partials/_footer') -%>
    <script src="js/parallax.min.js"></script>
</body>
</html>